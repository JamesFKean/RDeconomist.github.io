{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  
    "description": "NOMICS cryptocurrency chart. Number of exchanges",

    "config": {
      "background":"#122b39",
      "view": {
        "stroke": "transparent"
      }
    },

    "title": {
    "text": "Major stablecoins: Market cap",
    "anchor": "start",
    "color": "#179fdb",
    "subtitle":"Source: Nomics API",
    "subtitleFontStyle":"italic",
    "subtitleFontSize":10,
    "subtitleColor":"#179fdb"
    
  },
      
    "data": {
      "url": "https://api.allorigins.win/raw?url=https://api.nomics.com/v1/currencies/ticker?key=8bbf8728e16a7a780c4bffa13369437393a4da03&ids=BTC,ETH,XRP&interval=1d,30d,ytd"},

"transform":[
      {"filter": {
        "field": "currency", 
        "oneOf": ["USDT","DAI", "USDC", "BUSD", "TUSD"]}
        }           
      ],

  
    "mark": {
      "type": "bar",
      "color":"orange"},
  
    "width":270,
    "height":300,
    
    "encoding": {
      
      "x": {
        "field": "name", 
        "type": "ordinal", 
        "title": null, 
        "sort": "y",
        "axis": {"labelAngle": 35, "labelColor":"#00a767", "domainColor":"dimgrey"}
        
        },
      
      "y": {"field": "market_cap", "type": "quantitative", "title": null,
      "sort": [],
      "axis": {"labelColor":"#f4c245","domainColor":"dimgrey", "labelAngle": 0}
      
      },

      "tooltip": [
        {"field": "name", "title": "Currency"},
        {"field": "market_cap", "title": "Latest market cap"}
        
        
        ]
  
    }
  }