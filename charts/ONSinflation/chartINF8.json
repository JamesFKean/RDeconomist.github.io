{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",


    "title": {
    "text": "Inflation drivers: clothing, health, education",
    "subtitle": "Percentage 12-month change, CPI divisions",
    "subtitleFontStyle":"italic",
    "subtitleFontSize":10,
    "anchor": "start",
    "color": "black"
  },


    "width":300,
    "height":300,


    "encoding": {

      "x": {
        "field": "date", 
        "type": "temporal", 
        "title":null},
      
      "color": {
        "field": "name", 
        "type": "ordinal", 
        "title":null,
        "legend":{"orient": "bottom"},
        "scale":{"scheme":"set1"}}},


    "layer":[
      
      {"data": {"url": "https://api.allorigins.win/raw?url=https://api.ons.gov.uk/timeseries/d7ga/dataset/mm23/data",
      "format": {"type":"json", "property": "months"}},

      "mark":{"type": "line", "color":"red"},

      "encoding": {"y": {"field": "value", "type": "quantitative","title":null}},

      "transform": [
        {"calculate":"replace(datum.quarter, '', 'Clothing & footwear')", "as": "name"}
      ]
    },

    {"data": {"url": "https://api.allorigins.win/raw?url=https://api.ons.gov.uk/timeseries/d7gd/dataset/mm23/data",
      "format": {"type":"json", "property": "months"}},

      "mark":{"type": "line", "color":"blue"},

      "encoding": {"y": {"field": "value", "type": "quantitative","title":null}},

      "transform": [
        {"calculate":"replace(datum.quarter, '', 'Health')", "as": "name"}
      ]
    },

    {"data": {"url": "https://api.allorigins.win/raw?url=https://api.ons.gov.uk/timeseries/d7gh/dataset/mm23/data",
      "format": {"type":"json", "property": "months"}},

      "mark":{"type": "line", "color":"green"},

      "encoding": {"y": {"field": "value", "type": "quantitative","title":null}},

      "transform": [
        {"calculate":"replace(datum.quarter, '', 'Education')", "as": "name"}
      ]
    }
    
  ]
   
}